<form action="/books/upsert" role="form" method="post">
  {{#if book}}
    <div>
      <h2>{{book.title}}</h2>
      <input type="hidden" name="id" value="{{bookIndex}}">
    </div>
  {{/if}}
  <div>
    <label for="title">Title</label>
    <input type="text" id="title" name="title" {{#if book}}value="{{book.title}}"{{/if}}>
  </div>
  <div>
    <label for="pub_year">Publishing Year</label>
    <input type="number" id="pub_year" name="publishingYear" {{#if book}}value="{{book.publishingYear}}"{{/if}}>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

