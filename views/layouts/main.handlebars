<!DOCTYPE html>
<html lang="en">
  <head>
    <title>{{title}}</title>
  </head>
  <body>
    <nav>
      <ul>
        <li><a href="/">BookedIn home</a></li>
        <li><a href="/authors">Authors</a></li>
        <li><a href="/books">Books</a></li>

        {{#if currentUser}}
          <li>
            <a href="/users/profile">Welcome {{currentUser.name}}</a>
          </li>
          <li>
            <form action="/users/logout" role="form" method="post">
              <input type="hidden" name="_csrf" value="{{_csrfToken}}">
              <button type="submit" class="btn">Logout</button>
            </form>
          </li>
        {{else}}
          <li>
            <a href="/users/register">Register</a>
          </li>
          <li>
            <a href="/users/login">Login</a>
          </li>
        {{/if}}


      </ul>
    </nav>
    {{{body}}}
  </body>
</html>